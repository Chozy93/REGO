<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itwillbs.mapper.MainRecentViewMapper">

    <select id="selectRecentProducts"
            parameterType="list"
            resultType="com.itwillbs.dto.MainRecentViewDTO">

        SELECT
            p.product_id            AS productId,
            p.product_name          AS productName,
            p.price                 AS price,
            p.main_image_url        AS thumbnailUrl,
            p.region_display_name   AS regionName
        FROM products p
        WHERE p.product_id IN
        <foreach collection="list"
                 item="id"
                 open="("
                 separator=","
                 close=")">
            #{id}
        </foreach>

        <!-- localStorage 순서 유지 (최신 → 과거) -->
        ORDER BY FIELD(p.product_id,
        <foreach collection="list" item="id" separator=",">
            #{id}
        </foreach>
        )

    </select>

</mapper>
